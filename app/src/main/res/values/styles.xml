<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MenuButtonStyle" parent="MenuButtonTheme">
        <item name="android:textSize">@dimen/menuTextSize</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/menuButtonCornerRadius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">@dimen/menuIconSize</item>
        <item name="android:layout_marginHorizontal">@dimen/menuMediumPadding</item>
        <item name="android:layout_marginVertical">@dimen/menuSmallPadding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="MenuMainStyle" parent="MenuMainTheme">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/menuTextSizeMain</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginHorizontal">@dimen/menuMediumPadding</item>
    </style>

    <style name="MenuMainBackStyle" parent="MenuMainTheme">
        <item name="android:orientation">vertical</item>
    </style>



    <style name="SettingMainTextStyle" parent="SettingMainTheme">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/settingTextSizeMain</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SettingMainToolbarStyle" parent="SettingMainTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="SettingButtonStyle" parent="SettingButtonTheme">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">@dimen/settingSmallPadding</item>
        <item name="android:paddingVertical">@dimen/settingMediumPadding</item>
        <item name="android:text">@string/settingbuttonText2</item>
        <item name="android:textSize">@dimen/settingTextSize</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="SettingMainBackStyle" parent="SettingMainTheme">
    </style>

</resources>