<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="100dp"
    android:layout_marginHorizontal="24dp"
    android:orientation="vertical"
    android:gravity="center"
    android:theme="@style/Search.Theme"
    android:backgroundTint="?attr/colorPrimary"
    >
    <ImageView
        android:id="@+id/imageError"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/search_error_notfound"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/nameError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Ничего не нашлось"
        android:fontFamily="@font/ys_display_medium"
        android:textColor="?attr/colorSecondary"
        android:textSize="19sp"
        />
    <TextView

        android:id="@+id/commentError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mediumPadding"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textColor="?attr/colorSecondary"
        android:text = "Загрузка не удалась. Проверьте подключение к интернету"
        android:fontFamily="@font/ys_display_medium"
        android:textSize="19sp"
        />

    <Button
        android:id="@+id/buttonError"
        android:layout_marginTop="@dimen/mediumPadding"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:textSize="14sp"
        android:fontFamily = "@font/ys_display_medium"
        android:textColor="?attr/colorPrimary"
        android:backgroundTint="?attr/colorPrimaryVariant"
        android:padding="6dp"
        android:text="Обновить" />
</LinearLayout>